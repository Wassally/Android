<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textInputStyle">
        <item name="android:colorAccent">#ffff</item>
        <item name="android:colorControlNormal">@color/loginColorAccent</item>
        <item name="android:colorControlActivated">@color/loginColorAccent</item>
        <item name="android:colorControlHighlight">@color/loginColorAccent</item>
    </style>

    <style name="AppTheme.TextFloatingLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--styles for login and sign up activities -->
    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="TextInputLayoutSignUp" parent="@style/TextInputLayout">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <!--text views styles for displaying package summary-->
    <style name="AppTheme.displayTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>
